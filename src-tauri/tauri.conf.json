{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Digital Diary",
  "version": "0.1.0",
  "identifier": "com.digitaldiary.app",
  "build": {
    "beforeDevCommand": "node ./scripts/start-vite-if-needed.mjs",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Digital Diary",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": "^((mailto:|tel:|https?://).+|file://.+|[a-zA-Z]:\\\\\\\\.+)$"
    }
  }
}
